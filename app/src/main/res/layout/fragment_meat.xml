<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="확인"
            android:id="@+id/endbtn"/>

        <TextView
            android:id="@+id/KcalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kcal : 0"
            android:textSize="40dp"
            android:layout_marginLeft="188dp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <!-- 첫 번째 줄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50dp">
        <!--                첫 칸-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="70dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/egg3" />

            <CheckBox
                android:id="@+id/CheckBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삶은 달걀(50g) 80Kcal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <!--                두 번째 칸-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/eggfry7"/>

            <CheckBox
                android:id="@+id/CheckBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계란프라이(46g) 89Kcal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <!--                세 번째 칸 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/chicken14" />

            <CheckBox
                android:id="@+id/CheckBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닭가슴살(100g) 109Kcal"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>



    <!-- 두 번째 줄-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="50dp">
        <!--                첫 칸-->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="70dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/gunegg18" />

            <CheckBox
                android:id="@+id/CheckBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구운 계란(45g) 73Kcal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <!--                두 번째 칸-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/dong25" />

            <CheckBox
                android:id="@+id/CheckBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동그랑땡(15g) 30Kcal"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
        <!--                세 번째 칸 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/cow30" />

            <CheckBox
                android:id="@+id/CheckBox6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소불고기(300g) 489Kcal"

                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
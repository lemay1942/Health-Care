                        android:textSize="10dp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/peach19" />

                    <CheckBox
                        android:id="@+id/CheckBox12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="복숭아(269g) 91Kcal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 다섯 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/chusmalltomato21" />

                    <CheckBox
                        android:id="@+id/CheckBox13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대추방울토마토(15g) 2Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                두 번째 칸-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/gungoguma22" />

                    <CheckBox
                        android:id="@+id/CheckBox14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="군고구마(100g) 124Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/cucumber23" />

                    <CheckBox
                        android:id="@+id/CheckBox15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오이(210g) 19Kcal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 여섯 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/tomato24" />

                    <CheckBox
                        android:id="@+id/CheckBox16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="토마토(100g) 14Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                두 번째 칸-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/almonddrink27" />

                    <CheckBox
                        android:id="@+id/CheckBox17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아몬드 브리즈 오리지널(190g) 45Kcal"
                        android:textSize="11dp"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                </LinearLayout>
            </LinearLayout>







        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="확인"
            android:id="@+id/endbtn"/>

        <TextView
            android:id="@+id/KcalView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kcal : 0"
            android:textSize="40dp"
            android:layout_marginLeft="188dp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        android:layout_marginTop="0dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 첫 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/apple2" />

                    <CheckBox
                        android:id="@+id/CheckBox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사과(250g) 122Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                두 번째 칸-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/banana4"/>

                    <CheckBox
                        android:id="@+id/CheckBox2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바나나(100g) 93Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/kimchi5" />

                    <CheckBox
                        android:id="@+id/CheckBox3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="김치(100g) 25Kcal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>



            <!-- 두 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/goguma6" />

                    <CheckBox
                        android:id="@+id/CheckBox4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="찐고구마(100g) 93Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                두 번째 칸-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/coffee9" />

                    <CheckBox
                        android:id="@+id/CheckBox5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아메리카노(240m) 4Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/smalltomato10" />

                    <CheckBox
                        android:id="@+id/CheckBox6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방울토마토(13g) 2Kcal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>


            <!-- 세 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="70dp">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/pear11" />

                    <CheckBox
                        android:id="@+id/CheckBox7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="배(100g) 48Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                두 번째 칸-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/milk13" />

                    <CheckBox
                        android:id="@+id/CheckBox8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우유(200ml) 122Kcal"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                <!--                세 번째 칸 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/grape15" />

                    <CheckBox
                        android:id="@+id/CheckBox9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="포도(100g) 69Kcal"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>



            <!-- 네 번째 줄-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="50dp">
                <!--                첫 칸-->
                <LinearLayout
                    android:layout_width="200dp"
